@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

@*Custom UI Coponent*@
<MyNotiCount Count="@currentCount" ResetCount="ResetCount"></MyNotiCount>

<p>@resetMsg</p>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;
    private string resetMsg = string.Empty;

    private void IncrementCount()
    {
        currentCount++;
    }

    private void ResetCount()
    {
        currentCount = 0;
        resetMsg = "Counter has been reset.";
    }
}
