<button type="button" class="btn btn-primary position-relative" @onclick="InvokeResetCount">
    <i class="oi oi-bell"></i>
    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
        @Count
    </span>
</button>

@code {
    [Parameter]
    public int Count { get; set; } = 0;

    [Parameter]
    public EventCallback<int> ResetCount { get; set; }

    private async Task InvokeResetCount() => await ResetCount.InvokeAsync(8888);
}
